<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.1dp" android:color="@color/main_gv_bg_color" />

            <gradient android:angle="270.0" android:endColor="@color/gengduo_item_pressed_color" android:startColor="@color/gengduo_item_pressed_color" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/gengduo_item_pressed_color" android:startColor="@color/gengduo_item_pressed_color" />

            <stroke android:width="0.1dp" android:color="@color/main_gv_bg_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#ffffffff" android:startColor="#ffffffff" />

            <stroke android:width="0.1dp" android:color="@color/main_gv_bg_color" />
        </shape>
    </item>
</selector>