<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/gengduo_item_pressed_color" android:startColor="@color/gengduo_item_pressed_color" />

            <corners android:bottomRightRadius="5dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/gengduo_item_pressed_color" android:startColor="@color/gengduo_item_pressed_color" />
            <corners android:bottomRightRadius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/color_white" android:startColor="@color/color_white" />
            <corners android:bottomRightRadius="5dp" />
        </shape>
    </item>

</selector>