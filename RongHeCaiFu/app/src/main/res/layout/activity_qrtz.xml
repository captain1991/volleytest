<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:layout_height="match_parent">

            <include
                android:layout_width="match_parent"
                android:layout_height="15dp"
                layout="@layout/scrollview_header_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gv_item_bg"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="vertical">

                <TextView
                    style="@style/zc_black_text_value_style"
                    android:textColor="@color/licai_item_text_color1"
                    android:text="@string/text_yjzsy" />

                <TextView
                    android:id="@+id/tv_yjzsy"
                    style="@style/zc_black_text_value_style"
                    android:textColor="@color/licai_item_text_color1"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_20sp"
                    android:text="@string/text_ssf_hint" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="8dp"
                layout="@layout/scrollview_header_divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/shape_with_round_corner"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/licai_item_text1_style"
                    android:text="@string/text_input_tzje" />

                <EditText
                    android:id="@+id/et_tzje"
                    android:numeric="decimal"
                    style="@style/login_page_et_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/licai_item_text1_style"
                    android:text="@string/text_ktje" />

                <TextView
                    android:id="@+id/tv_ktje"
                    style="@style/licai_item_text1_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:clickable="true"
                    android:text="@string/text_ssf_hint" />

                <TextView
                    android:id="@+id/tv_cz"
                    style="@style/licai_item_text1_style"
                    android:textColor="@color/cz_text_color"
                    android:text="@string/text_cz" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_cz"
                style="@style/login_btn_style"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:text="@string/qztz" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>