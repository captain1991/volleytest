<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.ayd.rhcf.view.PagerSlidingTabStrip
        android:id="@+id/vpIndicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:pstsTabTextSize="@dimen/textfield_size_16"
        app:pstsTabNormalTextColor="@color/gengduo_item_text_color"
        app:pstsTabSelectedTextColor="@color/color_red"
        app:pstsShouldExpand="true"
        app:pstsIndicatorColor="@color/color_red"
        app:pstsIndicatorHeight="4dp"
        app:pstsUnderlineColor="@color/color_gray_line"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsUnderlineHeight="0.5dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
