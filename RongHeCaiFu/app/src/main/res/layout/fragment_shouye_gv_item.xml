<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/gv_item_bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/main_gv_img_size"
        android:layout_height="@dimen/main_gv_img_size"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView"
        android:layout_marginTop="4dp"
        android:textColor="@color/main_gv_text_color"
        android:textSize="@dimen/main_gv_text_size" />
</LinearLayout>